/**
 * Implements hook_html_head_alter
 */
function metatag_seo_html_head_alter(&$head_elements) {

	// Remove shortlink link
  foreach ($head_elements as $key => $element) {
    if (isset($element['#attributes']['rel']) && $element['#attributes']['rel'] == 'shortlink') {
      unset($head_elements[$key]);
    }
  }
}

/**
 * Implements hook_page_build().
 */
function metatag_seo_page_build(&$vars) {

	// Add metatags title and description
	if ($node = menu_get_object()) {

		foreach($vars['content']['metatags'] as $key => $element) {
			if (strstr($key, 'node')) {
				$vars['content']['metatags'][$key]['title']['#attached']['metatag_set_preprocess_variable'][0][2] = $node->metatags['es-es']['title']['value'];
			}
		}

		$element = array(
			'#type' => 'html_tag',
			'#tag' => 'meta',
			'#attributes' => array('name' => 'description', 'content' => ''.$node->metatags['es-es']['description']['value'].''),
		);
		drupal_add_html_head($element, 'meta_description');
	}
}

